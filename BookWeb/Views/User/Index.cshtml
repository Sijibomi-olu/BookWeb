@model IEnumerable<BookWeb.Entities.User>

@{
    ViewData["Title"] = "Users";
}

<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor"> Users </h3>
    </div>
</div>

<div class="container">
    <div class="row ">
        <div class=" col-lg-12 ">
            <div class="tm-bg-primary-dark tm-block tm-block-products">
                <div class="tm-product-table-container ">
                    <table class="table table-hover tm-table-small tm-product-table align-self-center ">
                        <thead>
                            <tr>
                                <th scope="col">&nbsp;</th>
                                <th scope="col">#</th>
                                <th scope="col">FirstName</th>
                                <th scope="col">LastName</th>
                                <th scope="col">Username</th>
                                <th scope="col">Email</th>
                                <th scope="col">PhoneNo</th>
                                <th scope="col">PasswordHash</th>
                                <th scope="col">PasswordSalt</th>
                                <th scope="col">Date Registered</th>
                                <th scope="col">&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                            <tr>
                                <th scope="col"> &nbsp;</th>
                                <th scope="col">@user.Id</th>
                                <th scope="col">@user.FirstName</th>
                                <th scope="col">@user.LastName</th>
                                <th scope="col">@user.Username</th>
                                <th scope="col">@user.Email</th>
                                <th scope="col">@user.PhoneNo</th>
                                <th scope="col">@user.PasswordHash</th>
                                <th scope="col">@user.PasswordSalt</th>
                                <th scope="col">@user.Dateregistered</th>
                                <th scope="col">&nbsp;</th>
                                <td><a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id"><i class="fa fa-pen" style="color:white;" aria-hidden="true"></i></a> </td>
                                <td><a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id"><i class="fa fa-trash" style="color:darkred;" aria-hidden="true"></i></a> </td>
                            </tr>
                            },
                        </tbody>
                    </table>
                </div>
                <div class="col-md-12 col-12 align-self-center">
                    <a asp-controller="User" asp-action="Create" class="btn float-right hidden-sm-down btn-success"><i class="mdi mdi-plus-circle"></i>New User</a>
                </div>
                <!-- table container -->


            </div>
        </div>
        
    </div>
</div> 