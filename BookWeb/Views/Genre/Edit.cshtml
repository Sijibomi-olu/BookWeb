@model BookWeb.Entities.Genre

@{
    ViewData["Title"] = "Genres";
}

<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor"> Genres </h3>
    </div>
</div>

<div class="container">
    <div class="row ">
        <div class=" col-lg-12 ">
            <div class="tm-bg-primary-dark tm-block tm-block-products">
                <div class="tm-product-table-container ">
                    <form asp-action="Edit" method="post" class="mt-4">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="CreatedBy">CreatedBy</label>
                            <input type="text" asp-for="CreatedBy" class="form-control" placeholder="Title" required="">
                            <span asp-validation-for="CreatedBy" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Name">Type</label>
                            <input type="text" asp-for="Name" class="form-control" id="name" placeholder="Enter Genre Name" required="">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success mr-2">Submit</button>
                        <button type="submit" class="btn btn-dark">Cancel</button>
                    </form>
                </div>
                <!-- table container -->
                
            </div>
        </div>
        
    </div>
</div> 