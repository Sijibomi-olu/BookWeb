@model BookWeb.Entities.Characteristics

@{
    ViewData["Title"] = "Characteristicss";
}

<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor"> New Characteristics </h3>
    </div>
</div>

<div class="container">
    <div class="row ">
        <div class=" col-lg-12 ">
                    <div class="tm-bg-primary-dark tm-block tm-block-products">
                        <div class="tm-product-table-container ">
                            <form asp-action="Create" method="post" class="mt-4">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Title">Title</label>
                                    <input type="text" asp-for="Title" class="form-control" placeholder="Title" required="">
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Widthincm">Width</label>
                                    <input type="text" asp-for="Widthincm" class="form-control" id="name" placeholder="Enter Width" required="">
                                    <span asp-validation-for="Widthincm" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Lengthincm">Length</label>
                                    <input type="text" asp-for="Lengthincm" class="form-control" id="name" placeholder="Enter Length" required="">
                                    <span asp-validation-for="Lengthincm" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Numofpages">Pages</label>
                                    <input type="text" asp-for="Numofpages" class="form-control" id="name" placeholder="Enter Number of Pages" required="">
                                    <span asp-validation-for="Numofpages" class="text-danger"></span>
                                </div>

                                <button type="submit" class="btn btn-success mr-2">Submit</button>
                                <button type="submit" class="btn btn-dark">Cancel</button>
                            </form>
                        </div>
                    </div>
         </div>
    </div>
</div> 