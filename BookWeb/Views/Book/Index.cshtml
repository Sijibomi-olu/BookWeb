@model IEnumerable<BookWeb.Entities.Book>

@{
    ViewData["Title"] = "Book";
}

    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Book</h3>
        </div>
    </div>

<div class="container">
    <div class="row ">
        <div class=" col-lg-12 ">
            <div class="tm-bg-primary-dark tm-block tm-block-products">
                <div class="tm-product-table-container ">
                    <table class="table table-hover tm-table-small tm-product-table align-self-center ">
                        <thead>
                            <tr>
                                <th class="border-top-0">ID</th>
                                <th class="border-top-0">Name</th>
                                <th class="border-top-0">AuthorID</th>
                                <th class="border-top-0">GenreID</th>
                                <th class="border-top-0">ISBN</th>
                                <th class="border-top-0">Year of Publish</th>
                                <th class="border-top-0">Rating</th>
                                <th class="border-top-0">Summary</th>
                                <th class="border-top-0">Created By</th>
                                <th class="border-top-0">Date Created</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var book in Model)
                            {
                                <tr>
                                    <td>@book.Id</td>
                                    <td>@book.Title </td>
                                    <td>@book.AuthorId  </td>
                                    <td>@book.GerneID  </td>
                                    <td>@book.ISBN    </td>
                                    <td>@book.YearPublish</td>
                                    <td>@book.Rating</td>
                                    <td>@book.Summary   </td>
                                    <td>@book.CreatedBy</td>
                                    <td>@book.DateCreated</td>
                                    <td><a asp-action="Edit" asp-route-id="@book.Id" alt="Edit"><i class="fa fa-pen m-r-10" style="color:white;" aria-hidden="true"></i></a> </td>
                                    <td><a asp-action="Delete" asp-route-id="@book.Id"><i class="fa fa-trash m-r-10" style="color:darkred;" aria-hidden="true"></i></a> </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="col-md-12 col-12 align-self-center">
                    <a asp-controller="Book" asp-action="Create" class="btn float-right hidden-sm-down btn-success"><i class="mdi mdi-plus-circle"></i>New Book</a>
                </div>
            </div>
        </div>
    </div>
</div>

